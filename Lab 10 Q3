#include <stdio.h>
#include <string.h>

int main() {
    int n,vowel=0,consonant=0,digit=0,spaces=0;
    char string[100];
    printf("Enter String :");
    fgets(string,sizeof(string),stdin);
    string[strcspn(string, "\n")]='\0';
    n=strlen(string);
    for (int i = 0;i<n;i++){
    if((string[i]>='A' && string[i]<='Z') || (string[i]>='a' && string[i]<='z')){
        if (strchr("aeiouAEIOU",string[i])){
        vowel++;}
        else{
            consonant++;
        }
    }

    else if(string[i]>='0'&& string[i]<='9'){
        digit++;
    }
    else if (string[i]==' '){
        spaces++;
    }


}
printf("The number of vowels are :%d , consonants :%d , Digits :%d , spaces :%d and the total characters are :%d",vowel,consonant,digit,spaces,n);
    return 0;
}
