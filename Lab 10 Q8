#include <stdio.h>

int main() {
    char categories[3][20] = {"Appetizers", "Main Course", "Desserts"};
    char items[3][3][30] = {
        {"Spring Rolls", "Garlic Bread", "Soup"},
        {"Grilled Chicken", "Beef Steak", "Veggie Pasta"},
        {"Ice Cream", "Brownie", "Fruit Salad"}
    };
    float prices[3][3] = {
        {6.50, 4.99, 7.25},
        {12.99, 18.50, 9.75},
        {5.00, 7.00, 8.25}
    };
    printf("---- RESTAURANT MENU ----\n\n");
    for (int c = 0; c < 3; c++) {
        printf("----- %s -----\n", categories[c]);
        for (int i = 0; i < 3; i++) {
            printf("%-20s $%.2f\n", items[c][i], prices[c][i]);
        }
        printf("\n");
    }
    printf("---- Budget-Friendly Options (< $10) ----\n\n");
    for (int c = 0; c < 3; c++) {
        for (int i = 0; i < 3; i++) {
            if (prices[c][i] < 10.0) {
                printf("%-20s $%.2f   (%s)\n", items[c][i], prices[c][i], categories[c]);
            }
        }
    }
    return 0;
}
