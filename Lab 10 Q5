#include <stdio.h>
#include <string.h>

int main(){
    int n,gindex=0,sum=0;
    printf("Enter the number of students :");
    scanf("%d",&n);
    getchar();
    char names[n][20];
    int marks[n];
    for (int i=0;i<n;i++){
        printf("\nEnter the name of the Student %d :",i+1);
        fgets(names[i],sizeof(names[i]),stdin);
        names[i][strcspn(names[i], "\n")] = '\0';
        printf("\nEnter the marks for Student %d :",i+1);
        scanf("%d",&marks[i]);
        getchar();
    }

    for (int j=0;j<n;j++){
        if(marks[gindex]<=marks[j]){
            gindex=j;
        }
        sum+=marks[j];
    }
    printf("\nHighest Scorer: %s with %d marks",names[gindex],marks[gindex]);
    printf("\nThe average is %.2f",(float)sum/n);

    return 0;
}
