#include <stdio.h>
#include <string.h>
int main() {
    int gindex=0,sum=0;
    char names[5][20];
    int marks[5];
    for (int i=0;i<5;i++){
        printf("\nEnter the name of student %d :",i+1 );
        fgets(names[i],sizeof(names[i]),stdin);
        names[i][strcspn(names[i],"\n")]='\0';
        printf("\nEnter the marks of student %d :",i+1);
        scanf("%d",&marks[i]);
        getchar();
    }
    printf("\nNAMES\t\tMARKS\n");
    for(int i=0;i<5;i++){
        fputs(names[i],stdout);
        printf("\t\t%d\n",marks[i]);
    }
        for (int j=0;j<5;j++){
        if(marks[gindex]<=marks[j]){
            gindex=j;
        }
        sum+=marks[j];
    }
    printf("\nHighest Scorer: %s with %d marks",names[gindex],marks[gindex]);
    printf("\nThe average is %.2f",(float)sum/5);

    return 0;
}
